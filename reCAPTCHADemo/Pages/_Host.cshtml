    <script>
  runCaptcha = function (actionName) {
   return new Promise((resolve, reject) => {
	grecaptcha.ready(function () {
	 grecaptcha.execute('6Lc9bL8aAAAAAEEswtv_7qUS0ZPCxujMThETm_W2', { action: 'submit' }).then(function (token) {
	  resolve(token);
	 });
	});
